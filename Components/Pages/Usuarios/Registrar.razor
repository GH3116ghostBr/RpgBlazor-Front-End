@page "/usuarios/registrar"
@rendermode InteractiveServer
@inject RpgBlazor.Services.UsuarioService UsuarioService
@inject NavigationManager Navigation
@using RpgBlazor.Models
@using RpgBlazor.Services

<h3>Registrar Usuário</h3>
<hr />

@if (!string.IsNullOrEmpty(mensagem))
{<div class="alert alert-info">@mensagem</div>}
else if(!string.IsNullOrEmpty(mensagemErro))
{<div class="alert alert-danger">@mensagemErro</div>}

@code
{
    private UsuarioViewModel usuario = new();
    private string mensagem = string.Empty;
    private string mensagemErro = string.Empty;

    private async Task RegistrarUsuario()
    {
        try
        {
            var usuarioRetorno = await UsuarioService.RegistrarAsync(usuario);
            if (usuarioRetorno.Id != 0)
            {
                mensagem = "Usuário registrado com sucesso! Redirecionando para o login...";
                await Task.Delay(5000);
                Navigation.NavigateTo("/usuarios/login");
            }
        }
        catch (Exception ex)
        {
            mensagemErro = ex.Message;
        }
    }

}

<EditForm Model="@usuario" OnValidSubmit="@RegistrarUsuario">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3">
        <label>Usuário:</label>
        <InputText @bind-Value="usuario.Username" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Senha:</label>
        <InputText @bind-Value="usuario.PasswordString" type="password" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
    <a href="usuarios/Login" class="btn btn-warning">Retornar</a>
</EditForm>